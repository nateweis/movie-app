<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <%include ../partials/head.ejs %>
  </head>
  <body>
    <div class="container">
      <%include ../partials/user-btn.ejs %>
      <h1><%=currentUser.username%>'s Favorite Movies</h1>
      <%include ../partials/nav.ejs %>
      <%for (let i = 0; i < allMovies.length; i++) {
        for (let j = 0; j < currentUser.favorites.length; j++) {
          if(allMovies[i].title === currentUser.favorites[j]){%>
            <div class="movies">
              <a href="/movies/<%=allMovies[i].id%>"><img src="<%=allMovies[i].img[0]%>" alt=""></a>
            </div>
          <%}
        }        
      } %>
    </div>
  </body>
</html>
