<%if(!currentUser){ %>
  <button class="userBtn side" id="signup">Sign up</button>
  <button class="userBtn side" id="login">Login</button>

  <div class="modal signup">
    <span class="x">X</span>
    <form class="userForm" action="/user" method="post">
      <h4>Sign Up</h4>
      Username: <input type="text" name="username"> <br>
      Password: <input type="password" name="password"> <br>
      <input type="submit">
    </form>
  </div>
  <div class="modal login">
     <span class="x">X</span>
    <form class="userForm" action="/user/login" method="post">
      <h4>Log In</h4>
      Username: <input type="text" name="username"> <br>
      Password: <input type="password" name="password"> <br>
      <input type="submit">
    </form>
  </div>
  <%}else{%>
    <form class="side" action="/user?_method=DELETE" method="post">
      <input type="submit" value="Log Out">
    </form>
    <%}%>
