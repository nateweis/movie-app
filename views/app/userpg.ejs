<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <%include ../partials/head.ejs %>
    <link rel="stylesheet" href="/css/form.css">
  </head>
  <body>
    <div class="container">
      <%include ../partials/user-btn.ejs %>
      <h1><%=currentUser.username%>'s page</h1>
      <%include ../partials/nav.ejs %>
      <br>
      <button class="center"><a href="/movies/new">Upload Movie </a></button>
      <h2 class="center">Movies You Submitted</h2>
      <%for (let i = 0; i < allMovies.length; i++) {
        if(allMovies[i].addedBy === currentUser.username){ %>
        <div class="movie-box">
          <%include ../partials/movie-display.ejs %>
          <form class="removeBtn" action="/movies/<%=allMovies[i].id%>?_method=DELETE" method="post">
            <input type="submit" value="Remove">
          </form>
          <button><a href="/movies/edit/<%=allMovies[i].id%>">Edit</a></button>

        </div>

      <%} }%>
    </div>

  </body>
</html>
